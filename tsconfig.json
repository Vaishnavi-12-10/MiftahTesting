{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "tests/**/*.ts",
        "utils/**/*.ts"
    ]
}